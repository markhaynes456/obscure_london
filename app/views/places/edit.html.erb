<div data-role="page" id="new">
    
    <div data-role="header" data-position="fixed">
        <a href="#mypanel" data-icon="grid" data-mini="true">Navigation</a>
        <h1>London Attraction App</h1>
    </div>
    <div data-role="content">
	<%= form_for(@place, html:{"data-ajax":"false"}) do |f| %>
		<%= f.label(:name) %>
		<%= f.text_field(:name) %>
		<%= f.label(:description) %>
		<%= f.text_field(:description) %>
		<%= f.label(:category) %>
		<%= f.select(:category,[["EAT","EAT"],["PLAY","PLAY"],["SHOP","SHOP"]]) %>
		<%= f.label(:address) %>
		<%= f.text_field(:address) %>
		<%= f.label(:postcode) %>
		<%= f.text_field(:postcode) %>
		<%= f.label(:tube) %>
		<%= f.text_field(:tube) %>
		<%= f.label(:cost) %>
		<%= f.text_field(:cost) %>
		<%= f.label("Opening hours Monday") %>
		<%= f.text_field(:monday) %>
		<%= f.label("Opening hours Tuesday") %>
		<%= f.text_field(:tuesday) %>
		<%= f.label("Opening hours Wednesday") %>
		<%= f.text_field(:wednesday) %>
		<%= f.label("Opening hours Thursday") %>
		<%= f.text_field(:thursday) %>
		<%= f.label("Opening hours Friday") %>
		<%= f.text_field(:friday) %>
		<%= f.label("Opening hours Saturday") %>
		<%= f.text_field(:saturday) %>
		<%= f.label("Opening hours Sunday") %>
		<%= f.text_field(:sunday) %>
		<%= f.label(:image) %>
		<%= f.file_field(:image) %>
		<%= f.submit %>
	<% end %>
	<h2>Delete Place?</h2>
	<%= link_to("Delete", @place, :method => :delete,:data => {:confirm => "Are you sure ?"}) %>
    </div>
    <div data-role="footer" data-id="footerConstant" data-position="fixed">
        <div data-role="navbar">
            <ul>
                <li>
                    <a href="#" data-rel="back">Back</a>
                </li>
                <li>
                    <a href="#home">Home</a>
                </li>
            </ul>
        </div>
    </div>
</div>
